{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Creation Date</th>
                <td>{{ post.creationDate ? post.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author ? post.author.email : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Artist Id</th>
                <td>{{ post.ArtistId }}</td>
            </tr>
            <tr>
                <th>Artist Name</th>
                <td>{{ post.ArtistName }}</td>
            </tr>
            <tr>
                <th>Artist Picture</th>
                <td><img src="{{ post.ArtistPicture }}" alt="Artist Picture" style="max-width: 200px;"></td>
            </tr>
            <tr>
                <th>Deezer Nb Albums</th>
                <td>{{ post.ArtistDeezerNbAlbums }}</td>
            </tr>
            <tr>
                <th>Deezer Nb Fans</th>
                <td>{{ post.ArtistDeezerNbFans }}</td>
            </tr>
            <tr>
                <th>Deezer Radio</th>
                <td>{{ post.ArtistDeezerRadio ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Deezer Tracklist</th>
                <td><a href="{{ post.ArtistDeezerTracklist }}" target="_blank">View Tracklist</a></td>
            </tr>
            <tr>
                <th>Artist Link</th>
                <td><a href="{{ post.ArtistLink }}" target="_blank">Visit Artist</a></td>
            </tr>
            <tr>
                <th>Deezer Type</th>
                <td>{{ post.ArtistDeezerType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">back to list</a>

    {% if isAdminOrAuthor %}
        <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>
    {{ include('post/_delete_form.html.twig') }}
    {% endif %}

    <div class="comments-section mt-5">
        <h2>Comments</h2>
        {% if post.getComments|length > 0 %}
            <div class="list-group">
                {% for comment in post.getComments %}
                    <div class="list-group-item">
                        <h5 class="mb-1">{{ comment.author ? comment.author.email : 'Anonymous' }}</h5>
                        <p class="mb-1">{{ comment.content }}</p>
                        <small class="text-muted">{{ comment.creationDate ? comment.creationDate|date('Y-m-d H:i:s') : '' }}</small>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>No comments yet.</p>
        {% endif %}
    </div>

    {% if app.user %}
        <div class="add-comment-section mt-5">
            <h2>Add a Comment</h2>
            {{ form_start(commentForm, {'action': path('app_post_add_comment', {'postId': post.id}), 'method': 'POST'}) }}
                {{ form_widget(commentForm) }}
                <button type="submit" class="btn btn-primary">Submit</button>
            {{ form_end(commentForm) }}
        </div>
    {% else %}
        <div class="alert alert-info mt-5">
            <p>You need to be logged in to add a comment.</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
        </div>
    {% endif %}

{% endblock %}
