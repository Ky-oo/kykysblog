{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Our latests articles</h1>

    {% if posts is not empty %}
        <div class="row">
            {% for post in posts %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text text-truncate">{{ post.content|raw }}</p>
                            <p class="text-muted small mb-2">Par : {{ post.author ? post.author.username : 'Auteur inconnu' }}</p>
                            <p class="text-muted small">{{ post.creationDate ? post.creationDate|date('d M Y') : '' }}</p>
                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-primary btn-sm">Lire plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-warning text-center" role="alert">
            Aucun article n'a été trouvé.
        </div>
    {% endif %}

    <div class="d-flex justify-content-center mt-4">
        <a href="{{ path('app_post_new') }}" class="btn btn-success">Créer un nouvel article</a>
    </div>
</div>
{% endblock %}
